`timescale 1ns/1ps
//Contador de Programa

module program_counter #(parameter ADDR_INSTRUCTION_WIDTH = 4 )
(
	input clk, pc_src,
	input [ADDR_INSTRUCTION_WIDTH - 1 : 0] sign_imm ,
	output reg [ADDR_INSTRUCTION_WIDTH - 1 : 0] pc

);

wire [ADDR_INSTRUCTION_WIDTH - 1 : 0] pc_branch;

assign pc_branch = (sign_imm << 2) + pc_plus4;